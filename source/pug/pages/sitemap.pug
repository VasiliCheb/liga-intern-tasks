extends ../components/base/layout

block variables
  - const title = "Список страниц"

block main
  style
    include ../../sass/inline/sitemap.css

  -
    const pages = [
      {
        name: "UI-kit — ui-kit.html",
        src: "ui-kit.html"
      },
      {
        name: "Анимации — index.html",
        src: "index.html"
      },
      {
        name: "Карта 1 — yandex-map-1.html",
        src: "yandex-map-1.html"
      },
      {
        name: "Карта 2 — yandex-map-2.html",
        src: "yandex-map-2.html"
      },
      {
        name: "Карта 3 — yandex-map-3.html",
        src: "yandex-map-3.html"
      },
      {
        name: "Карта 4 — yandex-map-4.html",
        src: "yandex-map-4.html"
      },
    ]

  main
    .sitemap
      .container
        a.sitemap__logo(href="index.html", aria-label="Переход на главную")
          +icon("logo", 300, 150)(alt="Логотип проекта")
        h1 Список страниц
        ol
          each page in pages
            li
              if page.id
                label(for=page.id)
                  span!= page.name
                input.visually-hidden(type="checkbox", checked=true, id=page.id)
                div
                  ul
                    each item in page.innerList
                      li
                        a(href= item.src)= item.name
              else
                a(href= page.src)= page.name
